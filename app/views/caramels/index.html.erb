<h1>All Caramels</h1>

<p><%= link_to "New Caramel", new_caramel_path %></p>

<% @caramels.each do |caramel| %>
  <div>
    <h2><%= caramel.name %></h2>
    <p>Adopted: <%= caramel.adopted %></p>
    <p>Judgemental Stare Intensity: <%= caramel.judgemental_stare_intensity %></p>
    <p>Found At: <%= caramel.found_at %></p>
    <p>
      <%= link_to "Show", caramel_path(caramel) %> |
      <%= link_to "Edit", edit_caramel_path(caramel) %> |
      <%= link_to "Delete", caramel_path(caramel), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </p>
  </div>
  <hr>
<% end %>
